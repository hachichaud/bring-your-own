md-content(
  layout="column"
  md-theme="dark-theme"
  ng-show="showLogInForm"
)
  form(
    name="logInForm"
    layout="row"
  )
    md-input-container(flex)
      label Username
      input(ng-model="user.username")
    md-input-container(flex)
      label Password
      input(
        ng-model="user.password"
        type="password"
      )
    md-button.md-primary(
      type="submit"
      ng-click="logIn(user)"
    ) Log In
    md-button(
      ng-click="showSignUp()"
    ) Sign Up
md-content(
  layout="column"
  md-theme="dark-theme"
  ng-show="showSignUpForm"
)
  form(
    name="signUpForm"
    layout="row"
  )
    md-input-container(flex)
      label Username
      input(ng-model="user.username")
    md-input-container(flex)
      label Email
      input(ng-model="user.email")
    md-input-container(flex)
      label Password
      input(
        ng-model="user.password"
        type="password"
      )
    md-button.md-primary(
      type="submit"
      ng-click="signUp(user)"
    ) Create account
