h2 Signup

md-content(
  layout-padding
  layout="column"
)
  md-content(
    layout="row"
    layout-sm="column"
  )
    md-input-container
      label Username
      input(ng-model="user.username")
    md-input-container
      label Email
      input(
        ng-model="user.email"
        type="email"
      )
    md-input-container
      label Password
      input(
        ng-model="user.password"
        type="password"
      )
  md-button.md-primary(
    ng-click="signUp(user)"
  ) Sign Up
